@{
    ViewBag.Title = "Демонстрация алгоритма нечеткого поиска TextRadar";
}

    <div>

        <style>
            .SearchString {
                width: 750px; 
            }
        </style>

        <style>
            .b1 {
                background: yellow;
            }
        </style>


        <h3>Демонстрация алгоритма нечеткого поиска TextRadar</h3>

        <p>
            @using (Ajax.BeginForm("MultiSearch", new AjaxOptions
            {
                UpdateTargetId = "results",
                OnBegin = "OnBegin",
                LoadingElementId = "loading"
            }))
            {

                <br>


                <input id="SearchString" name="SearchString" type="text" size="280" placeholder="Введите строку поиска" />

                <input type="submit" class="select" , value="Найти" />
                <br>
                <br>

        <p style=”line-height:1.5”>

            <h4>
                @MvcHtmlString.Create("Искать в")
            </h4>


            <input id="SearchLocation" type="radio" name="SearchLocation" value="InWarAndPeaceIndex" checked="checked" />

            @Html.ActionLink("романе Л.Н. Толстого Война и мир", "Pagination", "", new { target = "_blank" })
            @MvcHtmlString.Create(" (вариант с индексированием - повышенные скорость и качество поиска, для больших поисковых баз)")
            <br>

            <input id="SearchLocation" type="radio" name="SearchLocation" value="InWarAndPeaceFull" />
            @MvcHtmlString.Create("романе Л.Н. Толстого Война и мир (расширенный вариант - повышенное качество поиска, для небольших и средних поисковых баз)")
            <br>

            <input id="SearchLocation" type="radio" name="SearchLocation" value="InWarAndPeaceBase" />
            @MvcHtmlString.Create("романе Л.Н. Толстого Война и мир (базовый вариант - демонстрация основных подходов)")
            <br>


            <input id="SearchLocation" type="radio" name="SearchLocation" value="InDataString" />
            @MvcHtmlString.Create("строке данных (базовый вариант)")

            <br>
        </p>
            <textarea id="DataString" name="DataString" placeholder="Введите строку данных" cols="1000" , rows="3"></textarea>
            <br><br>

        }
            </p>

            <img id="loading" src="@Url.Content("~/Content/Images/loader.gif")" style="display:none" />

            <div id="results"></div>

        </div>


@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")

<script type="text/javascript">
    function OnBegin()
    {
        $("#results").html("");
    }
</script>
